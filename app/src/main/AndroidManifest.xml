<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.benbriggs.food_journal"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:installLocation="auto">

    <uses-feature android:name="android.hardware.camera"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Nutrient Calculator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".barcodeModel.BarcodeCaptureActivity"
            android:label="TESCO"/>
        <activity
            android:name=".HistoryActivity"
            android:label="@string/title_activity_history_activity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".BasketActivity"
            android:label="@string/title_activity_basket"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>