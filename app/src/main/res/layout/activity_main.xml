<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="70dp">

        <TextView
            android:id="@+id/daysLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:text="@string/recommended_days"
            />
        <TextView
            android:id="@+id/noPeopleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/daysValue"
            android:text="@string/peopleLabel"/>

        <TextView
            android:id="@+id/numberOfpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/noPeopleLabel"
            android:text="@string/_1"/>
        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/daysLabel"
            android:columnCount="8"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="78dp">


            <TextView
                android:id="@+id/energyHeader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:background="@drawable/rounded_corners"
                android:text="@string/energy"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/fatHeader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:background="@drawable/rounded_corners"
                android:text="@string/fat"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/saturatesHeader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:background="@drawable/rounded_corners"
                android:text="@string/saturates"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/carbHeader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:background="@drawable/rounded_corners"
                android:text="@string/carbohydrate"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sugarHeader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:background="@drawable/rounded_corners"
                android:text="@string/sugar"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/fibreHeader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:background="@drawable/rounded_corners"
                android:text="@string/fibre"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/saltHeader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_column="7"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:background="@drawable/last_top"
                android:text="@string/salt"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/energyValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:background="@drawable/red_corner"
                android:gravity="center"
                android:text="@string/placeHolderMain"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/fatValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:background="@drawable/red_corner"
                android:gravity="center"
                android:text="@string/placeHolderMain"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/saturatesValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:background="@drawable/red_corner"
                android:gravity="center"
                android:text="@string/placeHolderMain"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/carbValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:background="@drawable/red_corner"
                android:gravity="center"
                android:text="@string/placeHolderMain"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sugarValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:background="@drawable/red_corner"
                android:gravity="center"
                android:text="@string/placeHolderMain"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/fibreValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_column="5"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:background="@drawable/red_corner"
                android:gravity="center"
                android:text="@string/placeHolderMain"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/saltValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_column="7"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:background="@drawable/last_bottom_red"
                android:gravity="center"
                android:text="@string/placeHolderMain"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </GridLayout>

        <TextView
            android:id="@+id/daysValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/daysLabel"
            android:text="@string/_0"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/grid"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp"
            android:background="?android:attr/listDivider"/>
    </RelativeLayout>

    <Button
        android:id="@+id/read_barcode"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/new_item"/>

    <Button
        android:id="@+id/save_basket"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/read_barcode"
        android:layout_alignBottom="@+id/read_barcode"
        android:layout_toEndOf="@+id/read_barcode"
        android:text="@string/add_to_basket"/>

    <Button
        android:id="@+id/historyButton"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/save_basket"
        android:layout_alignBottom="@+id/save_basket"
        android:layout_toEndOf="@+id/save_basket"
        android:text="@string/history"/>

    <Switch
        android:id="@+id/use_flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/peopleInput"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:text="@string/use_flash"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mainRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/peopleInput"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rel"
        />

    <EditText
        android:id="@+id/peopleInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/historyButton"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/use_flash"
        android:ems="10"
        android:hint="@string/people"
        android:imeOptions="actionSend"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorHint="@color/common_google_signin_btn_text_light_pressed"
        android:textColorLink="@color/common_plus_signin_btn_text_light_disabled"/>
</RelativeLayout>
